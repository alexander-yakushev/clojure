#!/bin/bash -e
mvn clean
mvn package
mkdir -p target-skummet
rm -rf target-skummet/*

java -cp target/clojure-1.7.0-RC1-r2-slim.jar:. clojure.main test.clj
java -cp target/clojure-1.7.0-RC1-r2-slim.jar:target-skummet testskummet.bar 123456 example

# Pack Skummet
rm -rf target/skummet
mkdir -p target/skummet
cp -r target-skummet/clojure target/skummet/
cp -r target/classes/clojure/lang target/skummet/clojure/
cp -r target/classes/clojure/asm target/skummet/clojure/
cp -r target/classes/clojure/java/api/ target/skummet/clojure/java/
cp -r src/clj/clojure target/skummet/
cp target/classes/clojure/main.class target/skummet/clojure/
cd target/skummet/
rm -f ../clojure-1.7.0-RC1-r2.jar
zip -rq ../clojure-1.7.0-RC1-r2.jar *
cd ../..

# Retry tests
rm -rf target-skummet/*
java -cp target/clojure-1.7.0-RC1-r2.jar:. -Dclojure.compile.ignore-lean-classes=true clojure.main test2.clj
rm -rf target-skummet/clojure
java -cp target/clojure-1.7.0-RC1-r2.jar:target-skummet testskummet.bar 123456 example
